<Window x:Class="PurpleNotebook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Purple Notebook"
        Height="450"
        Width="800"
        SizeChanged="Window_SizeChanged">

    <Grid x:Name="MainGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Theme Selector -->
            <RowDefinition Height="Auto"/> <!-- Background Selector -->
            <RowDefinition Height="Auto"/> <!-- New Note Button -->
            <RowDefinition Height="Auto"/> <!-- Welcome Label -->
            <RowDefinition Height="*"/>    <!-- NoteEditor -->
            <RowDefinition Height="Auto"/> <!-- Save Buttons -->
            <RowDefinition Height="Auto"/> <!-- Signature -->
        </Grid.RowDefinitions>

        <!-- Theme Selector -->
        <ComboBox x:Name="ThemeSelector"
                  Grid.Row="0"
                  SelectionChanged="ThemeSelector_SelectionChanged"
                  Width="100"
                  HorizontalAlignment="Left"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="Lilac"/>
            <ComboBoxItem Content="Lavender"/>
            <ComboBoxItem Content="Smoke"/>
            <ComboBoxItem Content="Grape"/>
        </ComboBox>

        <!-- Background Selector -->
        <ComboBox x:Name="BackgroundSelector"
                  Grid.Row="1"
                  SelectionChanged="BackgroundSelector_SelectionChanged"
                  Width="100"
                  HorizontalAlignment="Left"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="Notebook"/>
            <ComboBoxItem Content="Abstract 1"/>
            <ComboBoxItem Content="Abstract 2"/>
            <ComboBoxItem Content="Ellipses"/>
            <ComboBoxItem Content="Gradient 1"/>
            <ComboBoxItem Content="Gradient 2"/>
            <ComboBoxItem Content="Gradient 3"/>
            <ComboBoxItem Content="Pine"/>
            <ComboBoxItem Content="Spectrum 1"/>
            <ComboBoxItem Content="Spectrum 2"/>
        </ComboBox>

        <!-- New Note Button -->
      

        <!-- Welcome Label -->
        <Label x:Name="MyLabel"
               Grid.Row="3"
               Content="Purple Notebook"
               FontSize="16"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <!-- Note Editor -->
        <TextBox x:Name="NoteEditor"
                 Grid.Row="4"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="14"
                 Margin="0"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"/>

        <!-- Save Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10">
            
            <Button x:Name="SaveNoteAs"
                    Content="Save As"
                    Width="100"
                    Margin="5"
                    Click="SaveNoteAs_Click"/>
            <Button x:Name="btnAddNote"
                    Content="New Note"
                    Click="btnAddNote_Click"
                    Background="#FF8000B0"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="10,5"
                    Margin="5"
                    BorderBrush="#FF5A0080"
                    BorderThickness="2"
                    HorizontalAlignment="Right"
                    Width="100" />

        </StackPanel>

        <!-- Signature -->
        <TextBlock Grid.Row="6"
                   Text="Made With ❤️ by de'deluxe"
                   FontSize="12"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
    </Grid>
</Window>
