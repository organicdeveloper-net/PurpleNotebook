<Window x:Class="PurpleNotebook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Purple Notebook"
        Height="450"
        Width="800"
        SizeChanged="Window_SizeChanged">
    <Grid>
        <ComboBox x:Name="ThemeSelector"
                  SelectionChanged="ThemeSelector_SelectionChanged"
                  Margin="10"
                  Width="150"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top">
            <ComboBoxItem Content="Default" />
            <ComboBoxItem Content="Dark" />
            <ComboBoxItem Content="Solarized" />
            <ComboBoxItem Content="High Contrast" />
        </ComboBox>

        <!-- Your UI layout goes here -->

    </Grid>
</Window>
