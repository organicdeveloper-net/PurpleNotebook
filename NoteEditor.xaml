<UserControl x:Class="PurpleNotebook.NoteEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PurpleNotebook"
             Height="Auto" Width="Auto">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Note Title" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleBox" Margin="0,0,0,10"/>

            <TextBlock Text="Note Content" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="ContentBox" AcceptsReturn="True" Height="100" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Tags" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="TagsBox" Margin="0,0,0,10"/>

            <Button Content="Apply Tags" Click="ApplyTags_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</UserControl>
